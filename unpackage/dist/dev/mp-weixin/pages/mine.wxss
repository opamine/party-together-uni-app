.mine-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
}
.mine-container .mine-content {
  padding: 16px;
  padding-top: 100px;
  background-image: linear-gradient(rgba(0, 0, 0, 0), black), url("https://zzh-assets.oss-cn-hangzhou.aliyuncs.com/temp/22.JPG");
  background-size: 100%;
}
.mine-container .mine-content .mine-info {
  display: flex;
}
.mine-container .mine-content .mine-info .avatar-container .avatar {
  display: block;
  height: 80px;
  width: 80px;
  border-radius: 50%;
}
.mine-container .mine-content .mine-info .describle-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 12px;
  padding-top: 6px;
  padding-bottom: 6px;
}
.mine-container .mine-content .mine-info .describle-container .nickName {
  font-size: 19px;
  font-weight: 600;
  color: #fff;
}
.mine-container .mine-content .mine-info .describle-container .account {
  color: #8d8a8e;
  font-size: 13px;
}
.mine-container .mine-content .mine-signature {
  margin-top: 16px;
  font-size: 13px;
  color: #fff;
}
.mine-container .mine-content .mine-info-tags {
  margin-top: 16px;
}
.mine-container .mine-content .mine-info-tags .info-tags-container {
  display: flex;
}
.mine-container .mine-content .mine-info-tags .info-tags-container .info-tag {
  margin-right: 4px;
  padding: 0 8px;
  height: 22px;
  line-height: 22px;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 11px;
  font-size: 10px;
  color: #fff;
}
.mine-container .mine-content .mine-socializing {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16px;
}
.mine-container .mine-content .mine-socializing .left {
  display: flex;
}
.mine-container .mine-content .mine-socializing .left .left-item {
  margin-right: 16px;
  text-align: center;
}
.mine-container .mine-content .mine-socializing .left .left-item .count {
  font-size: 14px;
  font-weight: 600;
  color: #fff;
}
.mine-container .mine-content .mine-socializing .left .left-item .cate {
  font-size: 11px;
  color: #d0cfcf;
}
.mine-container .mine-content .mine-socializing .right {
  display: flex;
  font-size: 13px;
}
.mine-container .mine-content .mine-socializing .right .right-btn {
  height: 24px;
  padding: 0 12px;
  margin-left: 16px;
  line-height: 24px;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  border: 1px solid #fff;
  font-size: 14px;
  color: #fff;
}
.mine-container .social-activity-container {
  flex: 1;
  overflow: auto;
}
.mine-container .social-activity-container .social-activity-content {
  height: 100%;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item {
  flex: 1;
  background-color: #fff;
  border-radius: 4px;
  overflow: auto;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-image {
  width: 100%;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-image image {
  width: 100%;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-title {
  padding: 8px;
  font-size: 14px;
  color: #333;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8px 12px;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-action .publisher-info {
  display: flex;
  align-items: center;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-action .publisher-info .publisher-avatar {
  margin-right: 8px;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-action .publisher-info .publisher-avatar image {
  display: block;
  width: 25px;
  height: 25px;
  border-radius: 50%;
  border: 1px solid #00000010;
  overflow: hidden;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-action .publisher-info .publisher-nick-name {
  font-size: 12px;
  color: #515151;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-action .like-info {
  display: flex;
  align-items: center;
  font-size: 12px;
}
.mine-container .social-activity-container .social-activity-content .dynamic-item .dynamic-item-action .like-info .like-count {
  margin-left: 4px;
}
.mine-container .social-activity-container .social-activity-content .activities-list {
  padding: 8px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item {
  padding: 8px;
  background-color: #fff;
  border-radius: 4px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info {
  display: flex;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-image {
  margin-right: 6px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-image image {
  display: block;
  width: 180px;
  height: 120px;
  border-radius: 4px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc {
  flex: 1;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-title {
  font-size: 14px;
  font-weight: 600;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 这里是超出几行省略 */
  overflow: hidden;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub {
  font-size: 12px;
  color: #696969;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-time,
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-address,
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-publisher {
  display: flex;
  align-items: center;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-time .icon,
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-address .icon,
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-publisher .icon {
  margin-right: 4px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-time {
  margin-top: 8px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-address {
  margin-top: 2px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-info .activity-desc .activity-desc-sub .activity-publisher {
  margin-top: 2px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12px;
}
.mine-container .social-activity-container .social-activity-content .activities-list .activity-item .activity-actions .action-btn {
  height: 30px;
  padding: 0 12px;
  background-color: #333;
  border-radius: 15px;
  line-height: 30px;
  color: #fff;
  font-size: 13px;
}