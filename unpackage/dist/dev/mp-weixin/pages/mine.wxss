.mine-header {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  background-color: #ffffff;
  font-weight: 600;
  z-index: 999;
}
.mine-container .mine-content {
  padding: 32rpx;
  background-size: 100%;
}
.mine-container .mine-content .mine-info {
  display: flex;
}
.mine-container .mine-content .mine-info .avatar-container .avatar {
  display: block;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.mine-container .mine-content .mine-info .describle-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 12px;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}
.mine-container .mine-content .mine-info .describle-container .nickName {
  font-size: 38rpx;
  font-weight: 600;
  color: #fff;
}
.mine-container .mine-content .mine-info .describle-container .account {
  color: #8d8a8e;
  font-size: 22rpx;
}
.mine-container .mine-content .mine-signature {
  margin-top: 32rpx;
  font-size: 26rpx;
  color: #fff;
}
.mine-container .mine-content .mine-info-tags {
  margin-top: 32rpx;
}
.mine-container .mine-content .mine-info-tags .info-tags-container {
  display: flex;
}
.mine-container .mine-content .mine-info-tags .info-tags-container .info-tag {
  margin-right: 8rpx;
  padding: 0 16rpx;
  height: 44rpx;
  line-height: 44rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 22rpx;
  font-size: 20rpx;
  color: #fff;
}
.mine-container .mine-content .mine-socializing {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
}
.mine-container .mine-content .mine-socializing .left {
  display: flex;
}
.mine-container .mine-content .mine-socializing .left .left-item {
  margin-right: 16px;
  text-align: center;
}
.mine-container .mine-content .mine-socializing .left .left-item .count {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}
.mine-container .mine-content .mine-socializing .left .left-item .cate {
  font-size: 22rpx;
  color: #d0cfcf;
}
.mine-container .mine-content .mine-socializing .right {
  display: flex;
  font-size: 24rpx;
}
.mine-container .mine-content .mine-socializing .right .right-btn {
  height: 48rpx;
  padding: 0 28rpx;
  line-height: 48rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  border: 1px solid #fff;
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
}
.mine-container .mine-content .mine-socializing .right .right-btn:first-of-type {
  margin-right: 24rpx;
}
.publish-button {
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  margin-left: -50rpx;
  border-radius: 50%;
  background-color: #272a30;
  line-height: 100rpx;
  text-align: center;
}