.fans-container {
  height: 100%;
  padding: 20px 16px;
  background: linear-gradient(#000000, #f8f8f8 50%);
  box-sizing: border-box;
  overflow: auto;
}
.fans-container .input-container {
  display: flex;
  padding: 6px;
  background-color: #ffffff;
  border: 1px solid #ffffff;
  border-radius: 6px;
}
.fans-container .input-container .icon-container {
  margin-right: 4px;
}
.fans-container .input-container .uni-input {
  flex: 1;
  font-size: 14px;
}
.fans-container .input-container .uni-input .uni-input-placeholder {
  color: #bbbbbb;
}
.fans-container .patient-application,
.fans-container .patient-group {
  margin-top: 16px;
  padding: 16px;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 1px 2px rgba(150, 150, 150, 0.3);
}
.fans-container .patient-application .title,
.fans-container .patient-group .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding-left: 12px;
}
.fans-container .patient-application .title .title-icon,
.fans-container .patient-group .title .title-icon {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  display: block;
  width: 4px;
  height: 16px;
  background-color: #000000;
  border-radius: 4px;
}
.fans-container .patient-application .title .title-text,
.fans-container .patient-group .title .title-text {
  font-size: 16px;
  font-weight: 600;
  color: #000000E0;
}
.fans-container .patient-application .title .title-tip,
.fans-container .patient-group .title .title-tip {
  font-size: 13px;
  color: #000000A6;
}
.fans-container .patient-application .application-list-container .application-list .application-list-item,
.fans-container .patient-group .application-list-container .application-list .application-list-item {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
}
.fans-container .patient-application .application-list-container .application-list .application-list-item .avatar-name,
.fans-container .patient-group .application-list-container .application-list .application-list-item .avatar-name {
  display: flex;
  align-items: center;
}
.fans-container .patient-application .application-list-container .application-list .application-list-item .avatar-name .avatar,
.fans-container .patient-group .application-list-container .application-list .application-list-item .avatar-name .avatar {
  height: 50px;
  width: 50px;
  margin-right: 12px;
  border-radius: 50%;
}
.fans-container .patient-application .application-list-container .application-list .application-list-item .avatar-name .name,
.fans-container .patient-group .application-list-container .application-list .application-list-item .avatar-name .name {
  color: #000000E0;
  font-size: 14px;
}
.fans-container .patient-application .application-list-container .application-list .application-list-item .actions,
.fans-container .patient-group .application-list-container .application-list .application-list-item .actions {
  display: flex;
  align-items: center;
}
.fans-container .patient-application .application-list-container .application-list .application-list-item .actions .add,
.fans-container .patient-group .application-list-container .application-list .application-list-item .actions .add {
  height: 26px;
  padding: 0 20px;
  margin-right: 12px;
  border-radius: 26px;
  background-color: #000000;
  line-height: 26px;
  color: #fff;
  font-size: 14px;
}
.fans-container .patient-application .application-list-container .application-list .application-list-item .actions .cancel,
.fans-container .patient-group .application-list-container .application-list .application-list-item .actions .cancel {
  line-height: 26px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item,
.fans-container .patient-group .group-list-container .group-list .group-list-item {
  margin-top: 12px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-title,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-title {
  position: relative;
  display: flex;
  align-items: center;
  height: 30px;
  line-height: 30px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-title .group-name,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-title .group-name {
  margin-left: 10px;
  font-size: 15px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-title .group-patients-count,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-title .group-patients-count {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  color: #bbbbbb;
  font-size: 14px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-content,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-content {
  padding-left: 20px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item {
  display: flex;
  justify-content: space-between;
  padding: 6px 0;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info {
  display: flex;
  align-items: center;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info .avatar,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info .avatar {
  height: 50px;
  width: 50px;
  margin-right: 12px;
  border-radius: 50%;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info .name-remark .name,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info .name-remark .name {
  font-size: 14px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info .name-remark .remark,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .patient-info .name-remark .remark {
  margin-top: 4px;
  color: #5e5e5e;
  font-size: 12px;
}
.fans-container .patient-application .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .action,
.fans-container .patient-group .group-list-container .group-list .group-list-item .collapse-item-content .patient-list .patient-list-item .action {
  display: flex;
  align-items: center;
}